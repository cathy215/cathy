<h2><%=t :case_list %></h2>

| <%= link_to t(:new_case), new_post_path %> | <br /><br />

<table>
  <thead>
    <tr>
      <th><%=t :case_title %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to t(:show), post %></td>
        <td><%= link_to t(:edit), edit_post_path(post) %></td>
        <td><%= link_to t(:destroy), post, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

